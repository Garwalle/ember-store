<div id="dashboardTitleSegment" class="ui inverted segment">
    <h1 class="title">Weclome to the store</h1>
</div>

<div class="ui inverted segment">
    <div id="sectionTitle">
        <h1>Sections</h1>
        <LinkTo class="ui inverted active tiny green icon button" @route="store.sections.add" {{action "scrollToTitle"}}><i class="plus icon"></i></LinkTo>
    </div>

    <div class="ui tiny modal" style="color: black;">
        <div class="header">Delete the section ?</div>
        <div class="content">If you delete it, all the products related to it will be also be remove.</div>
        <div class="actions">
            <div class="ui blue deny button">Cancel</div>
            <LinkTo class="ui red deny right labeled icon button" @route="store.sections.delete"
                @model={{this.sectionId}}>Delete<i class="trash icon"></i></LinkTo>
        </div>
    </div>

    {{outlet}}

    {{#each @model.sections as |section|}}
    <div class="section">
        <div class="sectionHeader">
            <div><h1>{{section.name}}</h1><div id="loading{{section.id}}" style="display: none;">{{outlet "loading"}}</div></div>
            <div class="ui inverted buttons">
                <LinkTo class="ui inverted green button" @route="store.sections.addProduct" @model={{section.id}} @tagName="button"><i class="icon plus"></i>Add product</LinkTo>
                <LinkTo class="ui inverted blue button" @route="store.sections.edit" @model={{section.id}} {{action "scrollToTitle"}} @tagName="button"><i class="icon pencil alternate"></i>Rename</LinkTo>
                <button class="ui inverted red button" {{action "showUiModal" section.id}}><i class="icon trash"></i>Delete</button>
            </div>
        </div>
        <div id="cards" class="ui cards">
            {{#each section.products as |product|}}
            <div class="ui centered card">
                <div class="image"><img src="/img/{{product.image}}.jpg"></div>
                <div class="content">
                    <div class="header">{{product.name}}</div>
                    <div class="meta">{{product.price}} â‚¬</div>
                </div>
                <div class="extra content">
                    <LinkTo @route="store.sections" class="ui basic blue button">Edit</LinkTo>
                    <LinkTo @route="store.sections" class="ui basic red button">Remove</LinkTo>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/each}}

</div>